<?xml version="1.0" encoding="utf-8"?>
<!-- Background for Seguro / Presidência: gold/dark suggesting Palácio de Belém -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#2C1810"
                android:centerColor="#5C4A1E"
                android:endColor="#3A2A0E" />
        </shape>
    </item>
    <item android:bottom="0dp" android:top="60%">
        <shape android:shape="rectangle">
            <solid android:color="#44DAA520" />
        </shape>
    </item>
</layer-list>
