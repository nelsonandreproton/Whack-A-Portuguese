<?xml version="1.0" encoding="utf-8"?>
<!-- Background for Rui Costa / Benfica: red gradient suggesting EstÃ¡dio da Luz -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#8B0000"
                android:centerColor="#E4000F"
                android:endColor="#C8000E" />
        </shape>
    </item>
    <!-- Subtle stripes suggesting stadium seats -->
    <item android:bottom="0dp" android:top="60%">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
        </shape>
    </item>
</layer-list>
