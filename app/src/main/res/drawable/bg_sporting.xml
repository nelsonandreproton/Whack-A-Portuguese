<?xml version="1.0" encoding="utf-8"?>
<!-- Background for Varandas / Sporting: green gradient suggesting Alvalade -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#003D20"
                android:centerColor="#006F3C"
                android:endColor="#008A4A" />
        </shape>
    </item>
    <item android:bottom="0dp" android:top="60%">
        <shape android:shape="rectangle">
            <solid android:color="#22F0B323" />
        </shape>
    </item>
</layer-list>
